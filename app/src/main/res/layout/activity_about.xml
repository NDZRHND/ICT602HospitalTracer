<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/wallpaper"
    tools:context=".AboutActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="viewStart"
        android:theme="@style/Theme.HospitalTracer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:title="About Us"
        app:titleTextColor="@color/white" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textHosp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="10dp"
        android:text="Hospital Tracer"
        android:textColor="#000A42"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="344dp"
        android:layout_height="90dp"
        android:layout_below="@+id/textHosp"
        android:layout_alignLeft="@+id/textHosp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="Welcome to Hospital Tracer Mobile Application. This application is made for users to locate the nearest hospital or health clinic. This application was made by 6 students of UiTM Arau for ICT602 subject's project. "
        android:textColor="#FAF9F9"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:layout_alignLeft="@+id/textHosp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="CS240 / RCS2405A"
        android:textColor="#161616"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:layout_alignLeft="@+id/textHosp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="Group member : "
        android:textColor="#161616"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/member1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textHosp"
        android:layout_alignLeft="@+id/textHosp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="6dp"
        android:text="> AIMUNI NADHRAH BINTI YAZIT (2020987947)"
        android:textColor="#161616"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/member2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textHosp"
        android:layout_alignLeft="@+id/textHosp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="6dp"
        android:text="> ANIS 'AISYAH BT MD NAZRI (2020952631)"
        android:textColor="#161616"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/member3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textHosp"
        android:layout_alignLeft="@+id/textHosp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="6dp"
        android:text="> FAIZAH BINTI AHMAD RODI (2020967513)"
        android:textColor="#161616"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/member4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textHosp"
        android:layout_alignLeft="@+id/textHosp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="6dp"
        android:text="> NUR SYIFA BINTI RAMZI (2020784099)"
        android:textColor="#161616"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/member5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textHosp"
        android:layout_alignLeft="@+id/textHosp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="6dp"
        android:text="> NURUL AZWA ATIKAH BINTI AHMAD TARMIZY (2020952403)"
        android:textColor="#161616"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/member6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textHosp"
        android:layout_alignLeft="@+id/textHosp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="6dp"
        android:text="> SITI NADZIRAH BINTI PARSIKUN (2020967883)"
        android:textColor="#161616"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/member6"
        android:layout_alignLeft="@+id/textHosp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="80dp"
        android:text="for more information, please visit"
        android:textColor="#F1EAEA"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textLink"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textHosp"
        android:layout_alignLeft="@+id/textHosp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="@string/messageWithLink"
        android:textColor="#FF9800"
        android:textColorHighlight="#FF9800"
        android:textColorLink="#FF9800"
        android:textSize="10sp"
        android:textStyle="bold" />

</LinearLayout>